<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.laptrinhdidong1">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Laptrinhdidong1"
        tools:targetApi="31">

        <!-- 💧 Bơm nước -->
        <activity
            android:name=".PumpSettingActivity"
            android:exported="false" />

        <!-- 💡 Đèn chiếu sáng -->
        <activity
            android:name=".LightSettingActivity"
            android:exported="false" />

        <!-- ☂️ Mái che -->
        <activity
            android:name=".RoofSettingActivity"
            android:exported="false" />

        <!-- 🌱 Lịch sử độ ẩm đất -->
        <activity
            android:name=".SoilHistoryActivity"
            android:exported="false" />

        <!-- 🌡️ Lịch sử nhiệt độ / độ ẩm -->
        <activity
            android:name=".TempHumidHistoryActivity"
            android:exported="false" />

        <!-- ☀️ Lịch sử ánh sáng -->
        <activity
            android:name=".LightHistoryActivity"
            android:exported="false" />

        <!-- 🌧️ Lịch sử thời tiết -->
        <activity
            android:name=".RainHistoryActivity"
            android:exported="false" />

        <!-- 🏠 Giao diện chính -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- 👤 Hồ sơ cá nhân -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- 🛠️ Cập nhật thông tin cá nhân -->
        <activity
            android:name=".UpdateProfileActivity"
            android:exported="false" />

        <!-- 🆕 Giao diện đăng ký -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- 🔑 Giao diện đăng nhập (mở đầu tiên khi chạy app) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
