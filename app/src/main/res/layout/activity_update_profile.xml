<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".UpdateProfileActivity">

    <!-- ðŸ”™ NÃºt quay láº¡i Ä‘á»“ng bá»™ toÃ n há»‡ thá»‘ng -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/bg_circle_white"
        android:padding="6dp"
        android:contentDescription="Quay láº¡i"
        android:elevation="3dp"
        app:tint="#27AE60"
        android:clickable="true"
        android:focusable="true" />

    <!-- ðŸŒ¿ Ná»™i dung -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_below="@id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="20dp"
        android:clipToPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- ðŸ–¼ï¸ áº¢nh Ä‘áº¡i diá»‡n -->
            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="24dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_user_placeholder" />

                <ImageView
                    android:id="@+id/btnChangeAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="6dp"
                    android:src="@drawable/ic_edit"
                    android:background="@drawable/bg_circle_white"
                    android:padding="8dp"
                    app:tint="#27AE60"
                    android:elevation="3dp"
                    android:clickable="true"
                    android:focusable="true" />
            </FrameLayout>

            <!-- ðŸ§â€â™‚ï¸ Nháº­p thÃ´ng tin cÃ¡ nhÃ¢n -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <!-- Há» vÃ  tÃªn -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFullName"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Há» vÃ  tÃªn"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="#27AE60">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor="#1B4332"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Sá»‘ Ä‘iá»‡n thoáº¡i -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPhone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sá»‘ Ä‘iá»‡n thoáº¡i"
                    android:layout_marginTop="12dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="#27AE60">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="#1B4332"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- NgÃ y sinh -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilBirth"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NgÃ y sinh (dd/mm/yyyy)"
                    android:layout_marginTop="12dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="#27AE60">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:textColor="#1B4332"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Giá»›i tÃ­nh -->
                <TextView
                    android:text="Giá»›i tÃ­nh"
                    android:textStyle="bold"
                    android:textColor="#145A32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />

                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="4dp">

                    <RadioButton
                        android:id="@+id/rbMale"
                        android:text="Nam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textColor="#1B4332" />

                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:text="Ná»¯"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:textColor="#1B4332" />
                </RadioGroup>
            </LinearLayout>

            <!-- ðŸ’¾ NÃºt lÆ°u -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cáº¬P NHáº¬T THÃ”NG TIN"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#27AE60"
                app:cornerRadius="24dp"
                android:elevation="3dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
