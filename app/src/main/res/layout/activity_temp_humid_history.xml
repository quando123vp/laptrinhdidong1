<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F7EF">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_circle_white"
        android:padding="6dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="#2C3E50"
        android:contentDescription="Back" />

    <TextView
        android:id="@+id/tvTitleTempHumid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LỊCH SỬ NHIỆT ĐỘ - ĐỘ ẨM"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#145A32"
        android:layout_marginTop="16dp"
        android:layout_below="@id/btnBack" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_temp_humid_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTitleTempHumid"
        android:padding="12dp"
        android:clipToPadding="false"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chưa có dữ liệu nhiệt độ &amp; độ ẩm!"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#7F8C8D"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>