<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Avatar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_user_default"
                android:contentDescription="User"
                android:foreground="?attr/selectableItemBackgroundBorderless" />
        </androidx.cardview.widget.CardView>

        <!-- Welcome -->
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Xin chào"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_avatar"
            android:layout_marginEnd="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vườn của Bạn"
            android:textColor="@color/primaryGreen"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_welcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_avatar"
            android:layout_marginEnd="16dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_sensor_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái cảm biến"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- GRID OF SENSOR CARDS -->
        <GridLayout
            android:id="@+id/grid_sensors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_sensor_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Soil -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <include layout="@layout/item_soil_card" />
            </FrameLayout>

            <!-- Temperature + Humidity -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <include layout="@layout/item_sensor_temp_humid" />
            </FrameLayout>

            <!-- Light -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <include layout="@layout/item_light_card" />
            </FrameLayout>

            <!-- Rain -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <include layout="@layout/item_rain_card" />
            </FrameLayout>

        </GridLayout>

        <!-- Control Title -->
        <TextView
            android:id="@+id/tv_control_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bảng điều khiển"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/grid_sensors"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Controls -->
        <include
            android:id="@+id/layout_controls"
            layout="@layout/layout_control_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/tv_control_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
