<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".LightSettingActivity">

    <!-- ðŸ”™ NÃºt quay láº¡i (Ä‘Ã£ lÃ m giá»‘ng PumpSettingActivity) -->
    <ImageView
        android:id="@+id/btnBackLight"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/bg_circle_white"
        android:padding="6dp"
        android:contentDescription="Quay láº¡i"
        android:elevation="3dp"
        app:tint="#27AE60"
        android:clickable="true"
        android:focusable="true" />

    <!-- Ná»™i dung chÃ­nh -->
    <ScrollView
        android:id="@+id/scrollViewLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnBackLight"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- ðŸŸ¢ TiÃªu Ä‘á» -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Há»† THá»NG ÄÃˆN CHIáº¾U SÃNG"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primaryGreen"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- ðŸ”˜ Tháº» cÃ i Ä‘áº·t Ä‘Ã¨n -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/lightGreenBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <!-- ðŸŒ• Tráº¡ng thÃ¡i Ä‘Ã¨n -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp">

                        <ImageView
                            android:id="@+id/icon_light_status"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_light"
                            app:tint="@color/iconYellow" />

                        <TextView
                            android:id="@+id/tvStatusLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/icon_light_status"
                            android:text="Tráº¡ng thÃ¡i Ä‘Ã¨n: ÄANG Táº®T ðŸŒ‘"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/swLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:useMaterialThemeColors="true" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@color/divider_color" />

                    <!-- âš™ï¸ Cháº¿ Ä‘á»™ tá»± Ä‘á»™ng -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp">

                        <ImageView
                            android:id="@+id/icon_auto_mode"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/primaryBlue" />

                        <TextView
                            android:id="@+id/tvAutoMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/icon_auto_mode"
                            android:text="Cháº¿ Ä‘á»™ tá»± Ä‘á»™ng"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/swAutoMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:useMaterialThemeColors="true" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@color/divider_color" />

                    <!-- ðŸ•’ Thá»i gian báº­t -->
                    <RelativeLayout
                        android:id="@+id/row_time_on"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp">

                        <ImageView
                            android:id="@+id/icon_time_on"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/icon_time_on"
                            android:text="Thá»i gian báº­t"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvTimeOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:drawableEnd="@drawable/ic_chevron_right"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/text_secondary"
                            android:gravity="center_vertical"
                            android:text="06:00"
                            android:textColor="@color/primaryGreen"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <!-- ðŸ•“ Thá»i gian táº¯t -->
                    <RelativeLayout
                        android:id="@+id/row_time_off"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp">

                        <ImageView
                            android:id="@+id/icon_time_off"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/icon_time_off"
                            android:text="Thá»i gian táº¯t"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvTimeOff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:drawableEnd="@drawable/ic_chevron_right"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/text_secondary"
                            android:gravity="center_vertical"
                            android:text="22:00"
                            android:textColor="@color/primaryGreen"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
